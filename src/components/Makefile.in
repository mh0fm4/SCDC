SCDC_SRC:=../

include ../Makefile.in

DEPS+=../Makefile.in

CPPFLAGS+=$(SCDC_A_CPPFLAGS) -I../include -I../extra/rapidxml-1.13
CFLAGS+=$(SCDC_A_CFLAGS)
CXXFLAGS+=$(SCDC_A_CXXFLAGS)

LIB:=libscdc_components.a

SUBDIRS:=common compcoup dataprov dataset node transport ../include

ifeq ($(USE_MYSQL),)
 CXXFILES_IGNORE+=dataprov/dataprov_mysql.cc
 HXXFILES_IGNORE+=dataprov/dataprov_mysql.hh
endif

ifeq ($(USE_MPI),)
 CXXFILES_IGNORE+=transport/transport_mpi.cc node/node_mpi.cc
 HXXFILES_IGNORE+=transport/transport_mpi.hh node/node_mpi.hh
endif

ifeq ($(USE_WEBDAV),)
 CXXFILES_IGNORE+=dataprov/dataprov_webdav.cc
 HXXFILES_IGNORE+=dataprov/dataprov_webdav.hh
endif

ifneq ($(USE_DAVIX),)
 CPPFLAGS+=-I/usr/include/davix
endif
