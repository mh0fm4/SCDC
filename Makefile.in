DEBUG:=1
#PROFILE:=1
#PERFOPT:=1

#USE_LOGFILE:=/tmp/scdclog

USE_DEBUG:=1
USE_PROFILE:=1
USE_PERFOPT:=1
USE_DEPRECATED:=1

USE_INFO:=1   # info messages
USE_TRACE:=1  # trace messages
USE_FAIL:=1   # internal function failures
USE_FATAL:=1  # internal errors
USE_ERROR:=1  # usage errors
USE_ASSERT:=1 # internal asserts

#USE_PYTHON:=1
#USE_ZLIB:=1
#USE_MYSQL:=1
#USE_MPI:=1
#USE_DAVIX:=1
#USE_NFS:=1

ifneq ($(USE_ALL),)
 USE_PYTHON:=1
 USE_ZLIB:=1
 USE_MYSQL:=1
 USE_MPI:=1
 USE_DAVIX:=1
 USE_NFS:=1
endif

ifneq ($(DEBUG),1)
 USE_DEBUG:=
 USE_INFO:=
 USE_TRACE:=
 USE_FAIL:=
 USE_ERROR:=
endif

ifneq ($(PROFILE),1)
 USE_PROFILE:=
endif

ifneq ($(PERFOPT),1)
 USE_PERFOPT:=
else
 USE_FATAL:=
 USE_ASSERT:=
endif

AR:=ar

CC:=gcc
CXX:=g++
LD:=gcc
LDCXX:=g++
MPICC:=mpicc
MPICXX:=mpicxx
MPILD:=mpicc
MPILDCXX:=mpicxx

PYTHON:=python

#CPPFLAGS:=
#CFLAGS:=-std=c99
#CXXFLAGS:=-std=c++03
#LDFLAGS:=
#LDCXXFLAGS:=
#LIBS:=

SCDC_A_CPPFLAGS:=
SCDC_A_CFLAGS:=-fPIC
SCDC_A_CXXFLAGS:=-fPIC
#SCDC_A_LDFLAGS:=
#SCDC_A_LIBS:=

SCDC_PY_INCDIRS:=$(SCDC_SRC)lib/scdc
SCDC_PY_LIBS:=scdc stdc++
SCDC_PY_LIBDIRS:=$(SCDC_SRC)lib/scdc
SCDC_PY_DEPENDS:=$(SCDC_SRC)lib/scdc/scdc.h $(SCDC_SRC)lib/scdc/libscdc.a
SCDC_PY_MACROS:=

LIBSCDC_CPPFLAGS:=-I$(SCDC_SRC)lib/scdc
#LIBSCDC_CFLAGS:=
LIBSCDC_LDFLAGS:=-L$(SCDC_SRC)lib/scdc
LIBSCDC_LIBS:=-lscdc -lstdc++
LIBSCDC_DEPENDS:=$(SCDC_SRC)lib/scdc/scdc.h $(SCDC_SRC)lib/scdc/libscdc.a

#CPPFLAGS+=-DHAVE_CONFIG_H
CPPFLAGS+=-DHAVE_Z_CONFIG_H=1

ifneq ($(USE_LOGFILE),)
 CPPFLAGS+=-DSCDC_LOGFILE=\"$(USE_LOGFILE)\"
 SCDC_PY_MACROS+=SCDC_LOGFILE=\"$(USE_LOGFILE)\"
endif

ifneq ($(USE_INFO),)
 CPPFLAGS+=-DHAVE_SCDC_INFO=1
 SCDC_PY_MACROS+=HAVE_SCDC_INFO=1
endif

ifneq ($(USE_TRACE),)
 CPPFLAGS+=-DHAVE_SCDC_TRACE=1
 SCDC_PY_MACROS+=HAVE_SCDC_TRACE=1
endif

ifneq ($(USE_FAIL),)
 CPPFLAGS+=-DHAVE_SCDC_FAIL=1
 SCDC_PY_MACROS+=HAVE_SCDC_FAIL=1
endif

ifneq ($(USE_ERROR),)
 CPPFLAGS+=-DHAVE_SCDC_ERROR=1
 SCDC_PY_MACROS+=HAVE_SCDC_ERROR=1
endif

ifneq ($(USE_ASSERT),)
 CPPFLAGS+=-DHAVE_SCDC_ASSERT=1
 SCDC_PY_MACROS+=HAVE_SCDC_ASSERT=1
endif

ifneq ($(USE_FATAL),)
 CPPFLAGS+=-DHAVE_SCDC_FATAL=1
 SCDC_PY_MACROS+=HAVE_SCDC_FATAL=1
endif

ifneq ($(USE_DEBUG),)
 CPPFLAGS+=-DHAVE_SCDC_DEBUG=1
 CFLAGS+=-ggdb -Wall -Wpointer-arith
 CXXFLAGS+=-ggdb -Wall
 LDFLAGS+=-ggdb -Wall
 LDCXXFLAGS+=-ggdb -Wall
 SCDC_PY_MACROS+=HAVE_SCDC_DEBUG=1
# PYTHON:=$(PYTHON)-dbg
endif

ifneq ($(USE_PROFILE),)
 CFLAGS+=-pg
 CXXFLAGS+=-pg
 LDFLAGS+=-pg
 LDCXXFLAGS+=-pg
endif

ifneq ($(USE_PERFOPT),)
 CPPFLAGS+=-DHAVE_SCDC_PERFOPT=1
 CFLAGS+=-O3
 CXXFLAGS+=-O3
 LDFLAGS+=-O3
 LDCXXFLAGS+=-O3
 SCDC_PY_MACROS+=HAVE_SCDC_PERFOPT=1
endif

ifneq ($(USE_DEPRECATED),)
 CPPFLAGS+=-DHAVE_SCDC_DEPRECATED=1
 SCDC_PY_MACROS+=HAVE_SCDC_DEPRECATED=1
endif

LIBSCDC_LIBS+=-lpthread

#ZLIB_PATH:=

ifneq ($(USE_ZLIB),)
 ifneq ($(ZLIB_PATH),)
  SCDC_A_CPPFLAGS+=-I$(ZLIB_PATH)/include
  SCDC_PY_LIBDIRS+=$(ZLIB_PATH)/lib
  LIBSCDC_LDFLAGS+=-L$(ZLIB_PATH)/lib
 endif
 SCDC_A_CPPFLAGS+=-DHAVE_ZLIB_H
 SCDC_PY_LIBS+=z
 LIBSCDC_LIBS+=-lz
endif

ifneq ($(USE_MYSQL),)
 SCDC_A_CPPFLAGS+=-DHAVE_MYSQL_H
 SCDC_PY_LIBS+=mysqlclient
 LIBSCDC_LIBS+=-lmysqlclient
endif

ifneq ($(USE_MPI),)
 SCDC_A_CPPFLAGS+=-DHAVE_MPI_H -DOMPI_SKIP_MPICXX
 SCDC_PY_LIBS+=mpi
endif

ifneq ($(USE_DAVIX),)
 USE_WEBDAV:=1
 SCDC_A_CPPFLAGS+=-DHAVE_DAVIX_HPP
 SCDC_PY_LIBS+=davix
 LIBSCDC_LIBS+=-ldavix
endif

ifneq ($(USE_NFS),)
 SCDC_A_CPPFLAGS+=-DHAVE_LIBNFS_H
 SCDC_PY_LIBS+=nfs
 LIBSCDC_LIBS+=-lnfs
endif

LIBFILEIO_SCDC_CPPFLAGS:=-I$(SCDC_SRC)lib/fileio
#LIBFILEIO_SCDC_CFLAGS:=
LIBFILEIO_SCDC_LDFLAGS:=-L$(SCDC_SRC)lib/fileio
LIBFILEIO_SCDC_LIBS:=-lfileio_scdc
LIBFILEIO_SCDC_DEPENDS:=$(SCDC_SRC)lib/fileio/libfileio_scdc.so
LIBFILEIO_SCDC_A_LDFLAGS:=$(LIBSCDC_LDFLAGS) -L$(SCDC_SRC)lib/fileio
LIBFILEIO_SCDC_A_LIBS:=$(SCDC_SRC)lib/fileio/libfileio_scdc.a -ldl $(LIBSCDC_LIBS)
LIBFILEIO_SCDC_A_DEPENDS:=$(LIBSCDC_DEPENDS) $(SCDC_SRC)lib/fileio/libfileio_scdc.a
LIBFILEIO_SCDC_SO_LDFLAGS:=
LIBFILEIO_SCDC_SO_LIBS:=$(SCDC_SRC)lib/fileio/libfileio_scdc.so
LIBFILEIO_SCDC_SO_DEPENDS:=$(SCDC_SRC)lib/fileio/libfileio_scdc.so

